<head>
    <link rel="stylesheet" href="../static/css/style.css">
    <title>Profile Page</title>
</head>


    <main>
        <section class="profile col-md-6 text-center col-lg" id="profile-page">
            <div class="profile-container">
                <img class="profile-img" src="../static/images/{{user.gender}}.png">
                <p>Email: <span>{{user.email}}</span></p>
            </div>
            <div class="profile-info">
                <p>Trips History: <span>{{user.tripsHistory.length}}</span> counts</p>

                <div class="trips-info">
                   {{#each user.tripsHistory}}
                   <p>from <span>{{startPoint}}</span> to <span>{{endPoint}}</span> on <span>{{date}}</span> at <span>{{time}}</span></p>
                    {{else}}
                    <p>there are no offer trips yet...</p>
                    {{/each}}
                </div>

            </div>
        </section>
    </main>
